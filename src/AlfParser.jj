/* STATEMENTS */
Statement Statement():
{
  Statement s;
}
{
  (
    s = AnnotatedStatement()
  | s = BlockStatement()
  | s = EmptyStatement()
  | s = ExpressionStatement()
  | s = IfStatement()
  | s = SwitchStatement()
  | s = WhileStatement()
  | s = ForStatement()
  | s = DoStatement()
  | s = BreakStatement()
  | s = ReturnStatement()
  | s = AcceptStatement()
  | s = ClassifyStatement()
  )
  
  { return s; }
