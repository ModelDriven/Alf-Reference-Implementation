/* BLOCK */

Block Block():
{
  Block b = new Block();
}
{
/* ORIGINAL
  <LBRACE> ( s = DocumentedStatement() { b.addStatement(s); } )* <RBRACE>
*/

  <LBRACE> BlockCompletion(b)
  { return b; }
}

