/* CONDITIONAL-AND OPERATOR */

Expression ConditionalAndExpression():
{
  Expression u;
  Expression e;
}
{
/* ORIGINAL
  [ ConditionalAndExpression() <SC_AND> ]  InclusiveOrExpression()
*/

  u = UnaryExpression() e = ConditionalAndExpressionCompletion(u)
  { return e; }
